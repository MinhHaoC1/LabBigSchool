@model IEnumerable<LabBigSchool.Models.Course>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <ul class="course">
        @foreach (var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.Datatime.ToString("MM")
                        </div>
                        <div class="Day">
                            @course.Datatime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                        </span>
                        <span class="category">
                            @course.Category.Name
                        </span>
                    </div>
                </li>
            }
    </ul>
</div>
